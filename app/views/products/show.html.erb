<div class="container">
    <div class="block block-item clearfix">
        <%= image_tag @product.image(:big), class: "item-img"%>
        <div class="item-info-full">
            <h2 class="item-title"><%= @product.title %></h2>
            <ul class="item-statistics">
                <li>Watched: <span><%= @product.view_count %></span></li>
                <li>Added to the cart: <span><%= @product.add_count %></span></li>
                <li>Ordered: <span><%= @product.order_count %></span></li>
            </ul>
            <p>
                <span class="item-price"><%= @product.price %> UAH</span>
            </p>
            <div class="part">
                <h3 class="title-part">Short description:</h3>
                <p class="text"><%= @product.description %></p>
            </div>
            <div class="part">
                <h3 class="title-part">Delivery:</h3>
                <span class="item-delivery"><%= @product.delivery_from %>-<%= @product.delivery_to %> days</span>
            </div>
            <%= link_to 'Add to the cart', checkout_add_url(product_id: @product.id), remote: true, method: :put, class: "btn-primary btn-wide" %>
        </div><!-- end of item-info-big -->
    </div><!-- end of block block-item clearfix -->
    <div class="block-title">
        Also purchased with this product
    </div>
</div><!-- end of container -->

<div class="container no-pd clearfix">
    <% @order_recomendation.each do |similar_product| %>
        <div class="tile shown">
            <figure class="item has-hover">
                <%= image_tag similar_product.image(:medium)%>
                <figcaption class="figcaption">
                    <p class="description-short"><%= similar_product.short_description %></p>
                    <span class="item-delivery"><%= similar_product.delivery_from %>-<%= similar_product.delivery_to %> days</span>
                    <%= link_to "stare", similar_product, class: "btn-primary" %>
                </figcaption>
            </figure>
            <div class="item-short-info">
                <h3 class="item-title"><%= link_to similar_product.title, similar_product %></h3>
                <p>
                    <span class="item-price"><%= similar_product.price %> UAH</span>
                </p>
            </div>
        </div>
    <% end %>
</div><!-- end of container -->

